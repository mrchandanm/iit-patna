<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="#9ECFF6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addupdateview"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD Students"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/addimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
      app:cardBackgroundColor="@color/iitpsecondarymain"
       android:layout_gravity="center_horizontal"
        app:cardCornerRadius="60dp"
        >
    <ImageView
        android:id="@+id/imageprofile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtviewupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="11dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9ECFF6"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <EditText
                android:id="@+id/addname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Name"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="18dp"
                android:gravity="center"
              />
            <EditText
                android:id="@+id/addroll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Roll No."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:textSize="18dp"
                android:gravity="center"
               />
            <EditText
                android:id="@+id/addmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="IITP Mail"
                android:textColor="@color/black"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:gravity="center"
               />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="11dp"
            app:cardCornerRadius="11dp"
            app:cardUseCompatPadding="true">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnaddupdate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:background="@color/iitpmain"
        android:textColor="@color/white"
        android:text="ADD"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>




</LinearLayout>