<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="320dp"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Upload Notice"
           android:textSize="35dp"
           android:gravity="center"
           />
       <androidx.cardview.widget.CardView
           android:id="@+id/selectnoticeimage"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_marginTop="20dp"
          app:cardBackgroundColor="@color/iitpsecondarymain"
           android:layout_gravity="center_horizontal"
           app:cardCornerRadius="60dp"
           >
           <ImageView
               android:id="@+id/addnoticeimage"
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:src="@drawable/ic_baseline_add_a_photo_24"
               android:layout_gravity="center"/>

       </androidx.cardview.widget.CardView>
       <TextView
           android:id="@+id/txtviewuploadimage"
           android:layout_width="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_height="wrap_content"
           android:text="Upload notice image"/>

      <EditText
          android:id="@+id/addnoticetitle"
          android:layout_marginTop="20dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:padding="2dp"
         android:hint="Title"
          android:layout_marginBottom="10dp"
          android:gravity="center"
          android:textSize="20dp"
          />

       <EditText
           android:layout_margin="10dp"
           android:id="@+id/addnoticedescription"
           android:background="#33201F1F"
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:padding="5dp"
           android:textColor="@color/black"
        android:hint="Description.."
           android:textSize="20dp"/>
       <LinearLayout
           android:id="@+id/pdflyout"

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="10dp"
           >
       <TextView
           android:id="@+id/pdfname"
           android:layout_marginTop="10dp"
           android:layout_width="wrap_content"
          android:background="#66A5A6A5"
           android:gravity="center"
           android:padding="2dp"
          android:layout_weight="2"
           android:layout_height="wrap_content"
           android:text="Upload pdf"
           android:textSize="25dp"/>
          <ImageView
              android:id="@+id/pdfuploadbtn"
              android:layout_width="40dp"
              android:layout_height="match_parent"
              android:src="@drawable/ic_baseline_cloud_upload_24"/>
       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="40dp"
           android:layout_marginBottom="40dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center">
       <androidx.cardview.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:cardCornerRadius="30dp"
           app:cardElevation="20dp"
           >
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/uploadnoticebtn"
               android:background="@color/iitpmain"
               android:layout_width="150dp"
               android:layout_height="40dp"
               android:text="Upload"
               android:gravity="center"
               android:textColor="@color/white"
               android:textSize="30dp"/>
       </androidx.cardview.widget.CardView>
       </LinearLayout>

   </LinearLayout>

</LinearLayout>